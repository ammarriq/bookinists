---
import BaseLayout from '@/layouts/BaseLayout.astro'

const db = Astro.locals.runtime.env.SITE_DB
const { results } = await db
  .prepare(
    `SELECT editions_images.created_on AS editions_creation_date, * FROM editions
    LEFT JOIN editions_images ON editions.id = editions_images.edition_id`,
  )
  .all()
---

<BaseLayout title="Welcome to Astro.">
  <pre>
    {JSON.stringify(results, null, 2)}
  </pre>
</BaseLayout>
