---
import Dropdown from './Header.svelte'

const user = Astro.locals.user

const menu = [{ isPost: true, label: 'Logout', url: '/api/logout' }]
---

<header
  class="fixed top-0 left-0 lg:left-56 right-0 z-40
  bg-white flex items-center px-4 h-12"
>
  <Dropdown
    client:load
    menu={menu}
    user={{ name: user?.name, picture: user?.picture }}
  />
</header>
